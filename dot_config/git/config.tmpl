# vim: ft=gitconfig

[color]
	ui = true

[core]
	whitespace = cr-at-eol

[push]
	default = current

[alias]
	co = checkout
	c = commit -v
	d = diff --no-prefix
	st = status
	s = status
	ss = status --short
	su = status --untracked
[pull]
	ff = only

{{- if eq .chezmoi.os "darwin" }}
[credential]
	helper = osxkeychain
{{- end }}

{{- if lookPath "bcomp" }}
[diff]
	tool = bc3
[merge]
	tool = bc3
[mergetool]
	bc3 = trustExitCode
{{- else }}
[diff]
	tool = kdiff3
[merge]
	tool = kdiff3
[mergetool]
	kdiff3 = trustExitCode
{{- end }}
	keepBackup = false

[include]
	path = user
